{
    "manifest_version": 2,
    "name": "Claude to Markdown",
    "version": "2025.2.7",
    "description": "Exports Claude chat conversations as Markdown",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "storage",
      "tabs",
      "*://*.claude.ai/*",
      "*://api.github.com/*"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
